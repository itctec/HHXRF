<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".settings_group_fragment.calibration_fragment.TypeCalibrationAddSpTwo">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/type_Calibration_Add_Sp_Two_Top_Navigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/activity_bg"
        android:elevation="2dp"
        android:paddingTop="@dimen/app_status_bar_height"
        app:layout_constraintBottom_toTopOf="@+id/type_Calibration_Add_Sp_Two_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/type_Calibration_Add_Sp_Two_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="35dp"
            android:onClick="onBackBtnClick"
            android:src="@drawable/vector_drawable_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Top_Navigation_Type_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text="CA1"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Top_Navigation_Back_Btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/type_Calibration_Add_Sp_Two_Top_Navigation_Show_Changed_Item_Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="显示修改"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:theme="@style/MyActionBarSwitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/type_Calibration_Add_Sp_Two_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/type_Calibration_Add_Sp_Two_Element_RV_Title_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/type_Calibration_Add_Sp_Two_Top_Navigation_Bottom_Horizontal_Guideline">

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Element_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_element"
            android:textColor="@color/home_text_black"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Multiplication_Label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Multiplication_Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_multiplication"
            android:textColor="@color/home_text_black"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Element_Name"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Plus_Label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Plus_Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_plus"
            android:textColor="@color/home_text_black"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Multiplication_Label"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Unit_Label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Unit_Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_unit"
            android:textColor="@color/home_text_black"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Plus_Label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/type_Calibration_Add_Sp_Two_Item_Divider_Line_One"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/type_Calibration_Add_Sp_Two_Element_Name" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/type_Calibration_Add_Sp_Two_Element_RV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_Calibration_Add_Sp_Two_Element_RV_Title_Layout" />

    <Button
        android:id="@+id/type_Calibration_Add_Sp_Two_Sure_Btn"
        android:text="@string/calibration_fragment_add_sp_two_sure"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_bg_green_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>