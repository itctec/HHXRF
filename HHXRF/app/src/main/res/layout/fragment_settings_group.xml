<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/settings_Group_Top_Navigation"
        android:background="@color/activity_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/app_status_bar_height"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/settings_Group_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/settings_Group_Top_Navigation_Show_Left_Drawer_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:src="@drawable/vector_drawable_left_menu_icon"
            android:onClick="onLeftDrawerShowBtnClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/settings_Group_Top_Navigation_Tab_Title"
            android:text="@string/result_settings"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            app:layout_constraintLeft_toRightOf="@id/settings_Group_Top_Navigation_Show_Left_Drawer_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline
        android:id="@+id/settings_Group_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/settings_Indicator_RecyclerView"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/settings_Group_Top_Navigation_Bottom_Horizontal_Guideline"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/settings_Fragment_Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/settings_Indicator_RecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>