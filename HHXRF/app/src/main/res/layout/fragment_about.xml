<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/about_Fragment_Title"
        android:text="@string/about_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/about_Fragment_Title"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/instruction_Item_Layout"
                android:background="@color/activity_bg"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/instruction_Content_Item">
                <View
                    android:background="#999999"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/instruction_Item_Icon"
                    android:src="@drawable/bg_logo"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/instruction_Item_Title"
                    android:text="@string/about_fragment_instruction_title"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/instruction_Item_Sub_Title"
                    app:layout_constraintLeft_toRightOf="@id/instruction_Item_Icon"/>
                <TextView
                    android:id="@+id/instruction_Item_Sub_Title"
                    android:text="@string/about_fragment_instruction_sub_title"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/instruction_Item_Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/instruction_Item_Icon"/>
                <ImageView
                    android:id="@+id/instruction_Item_Arrow_Icon"
                    android:src="@drawable/vector_drawable_arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/instruction_Content_Item"
                android:text="@string/about_fragment_instruction_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/tel_Item_Layout"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/tel_Item_Layout"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:layout_constraintBottom_toTopOf="@+id/mail_Item_Layout">
                <View
                    android:background="#999999"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/tel_Item_Icon"
                    android:src="@drawable/icon_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tel_Item_Title"
                    android:text="@string/about_fragment_instruction_tel_title"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tel_Item_Sub_Title"
                    app:layout_constraintLeft_toRightOf="@id/tel_Item_Icon"/>
                <TextView
                    android:id="@+id/tel_Item_Sub_Title"
                    android:text="@string/about_fragment_instruction_tel_sub_title"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tel_Item_Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tel_Item_Icon"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/mail_Item_Layout"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:layout_constraintBottom_toTopOf="@+id/instruction_Download_Item_Layout">
                <View
                    android:background="#999999"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/mail_Item_Icon"
                    android:src="@drawable/icon_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/mail_Item_Title"
                    android:text="@string/about_fragment_instruction_mail_title"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/mail_Item_Sub_Title"
                    app:layout_constraintLeft_toRightOf="@id/mail_Item_Icon"/>
                <TextView
                    android:id="@+id/mail_Item_Sub_Title"
                    android:text="@string/about_fragment_instruction_mail_sub_title"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/mail_Item_Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/mail_Item_Icon"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/instruction_Download_Item_Layout"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:layout_constraintBottom_toBottomOf="parent">
                <View
                    android:background="#999999"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/instruction_Download_Item_Icon"
                    android:src="@drawable/icon_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/instruction_Download_Item_Title"
                    android:text="@string/about_fragment_instruction_download_title"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/instruction_Download_Item_Sub_Title"
                    app:layout_constraintLeft_toRightOf="@id/instruction_Download_Item_Icon"/>
                <TextView
                    android:id="@+id/instruction_Download_Item_Sub_Title"
                    android:text="@string/about_fragment_instruction_download_sub_title"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/instruction_Download_Item_Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/instruction_Download_Item_Icon"/>
                <ImageView
                    android:id="@+id/instruction_Download_Item_Arrow_Icon"
                    android:src="@drawable/vector_drawable_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>