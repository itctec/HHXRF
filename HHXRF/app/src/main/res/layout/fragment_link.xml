<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/link_Fragment_Title"
        android:text="@string/link_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/link_Fragment_Item_Switch_Layout"
        android:background="#FFFFFF"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="62dp"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/link_Fragment_Bt_Switch_Icon"
            android:src="@drawable/vector_drawable_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/link_Fragment_Bt_Switch_Title"
            android:text="蓝牙"
            android:textSize="8pt"
            android:textColor="@color/result_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/link_Fragment_Bt_Switch_State"
            app:layout_constraintLeft_toRightOf="@id/link_Fragment_Bt_Switch_Icon"/>
        <TextView
            android:id="@+id/link_Fragment_Bt_Switch_State"
            android:text="未连接"
            android:textSize="7pt"
            android:textColor="@color/result_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/link_Fragment_Bt_Switch_Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/link_Fragment_Bt_Switch_Title"/>
        <Switch
            android:id="@+id/link_Fragment_Bt_Switch"
            android:text="打开蓝牙"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:theme="@style/MyActionBarSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/link_Fragment_Bluetooth_Device_List"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/link_Fragment_Item_Switch_Layout"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>