<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/format_Fragment_Title"
        android:text="@string/format_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/format_Fragment_Format_One_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/format_Fragment_Title"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/format_Fragment_Format_One_Title"
            android:text="@string/format_fragment_format_three"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/format_Fragment_Format_One_Selected_Tip"
            android:text="@string/format_fragment_format_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_One_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/format_Fragment_Format_Two_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_One_Layout_Btn"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/format_Fragment_Format_Two_Title"
            android:text="@string/format_fragment_format_two"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/format_Fragment_Format_Two_Selected_Tip"
            android:text="@string/format_fragment_format_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_Two_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/format_Fragment_Format_Three_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_orange"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_Two_Layout_Btn"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/format_Fragment_Format_Three_Title"
            android:text="@string/format_fragment_format_one"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/format_Fragment_Format_Three_Selected_Tip"
            android:text="@string/format_fragment_format_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_Three_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/format_Fragment_Format_Three_Number_Picker_Bg"
        android:background="@drawable/round_rectangle_bg_orange"
        android:layout_width="80dp"
        android:layout_height="73dp"
        android:layout_marginLeft="18dp"
        android:elevation="3dp"
        app:layout_constraintLeft_toRightOf="@id/format_Fragment_Format_Three_Layout_Btn"
        app:layout_constraintTop_toTopOf="@id/format_Fragment_Format_Three_Layout_Btn"
        app:layout_constraintBottom_toBottomOf="@id/format_Fragment_Format_Three_Layout_Btn"/>
    <itc.ink.hhxrf.view.MyNumberPicker
        android:id="@+id/format_Fragment_Format_Three_Number_Picker"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="60dp"
        android:layout_height="73dp"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"
        app:layout_constraintRight_toRightOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"
        app:layout_constraintTop_toTopOf="@id/format_Fragment_Format_Three_Layout_Btn"
        app:layout_constraintBottom_toBottomOf="@id/format_Fragment_Format_Three_Layout_Btn"/>
    <TextView
        android:id="@+id/format_Fragment_Format_Three_Number_Picker_Title"
        android:text="@string/format_fragment_number_pick_title"
        android:textSize="14sp"
        android:textColor="@color/edit_report_text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"
        app:layout_constraintLeft_toLeftOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"
        app:layout_constraintRight_toRightOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"/>
    <TextView
        android:id="@+id/format_Fragment_Format_One_Number_Picker_Title_tip"
        android:text="@string/format_fragment_number_pick_title_tip"
        android:textSize="11sp"
        android:textColor="@color/edit_report_text_gray_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@id/format_Fragment_Format_Three_Number_Picker_Title"
        app:layout_constraintLeft_toLeftOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"
        app:layout_constraintRight_toRightOf="@id/format_Fragment_Format_Three_Number_Picker_Bg"/>

</android.support.constraint.ConstraintLayout>