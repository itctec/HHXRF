<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/unit_Fragment_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:text="@string/unit_fragment_title"
        android:textColor="@color/result_text_black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/unit_Fragment_Item_Switch_Layout_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/unit_Fragment_Layout_Bg"
            android:background="@drawable/round_rectangle_bg_dark"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/unit_Fragment_Percent_Item_Btn_Back"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:background="@drawable/unit_sel_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit_Fragment_Percent_Btn_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/unit_text_gray"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Layout_Bg"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_Percent_Item_Btn_Back"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_Percent_Item_Btn_Back"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Layout_Bg" />
        <TextView
            android:id="@+id/unit_Fragment_Percent_Select_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/unit_fragment_sel_label"
            android:textColor="@color/unit_text_gray"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/unit_Fragment_Vertical_Line_One"
            app:layout_constraintRight_toRightOf="@+id/unit_Fragment_Vertical_Line_One"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />

        <ImageView
            android:id="@+id/unit_Fragment_PPM_Item_Btn_Back"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:layout_marginLeft="82dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit_Fragment_PPM_Btn_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ppm"
            android:textColor="@color/unit_text_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Layout_Bg"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_PPM_Item_Btn_Back"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_PPM_Item_Btn_Back"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Layout_Bg" />
        <TextView
            android:id="@+id/unit_Fragment_PPM_Select_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/unit_fragment_sel_label"
            android:textColor="@color/unit_text_gray"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/unit_Fragment_Vertical_Line_Two"
            app:layout_constraintRight_toRightOf="@+id/unit_Fragment_Vertical_Line_Two"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />
        <ImageView
            android:id="@+id/unit_Fragment_MGCM_Item_Btn_Back"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:layout_marginLeft="164dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit_Fragment_MGCM_Btn_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg/cm"
            android:textColor="@color/unit_text_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Layout_Bg"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_MGCM_Item_Btn_Back"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_MGCM_Item_Btn_Back"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Layout_Bg" />
        <TextView
            android:id="@+id/unit_Fragment_MGCM_Select_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/unit_fragment_sel_label"
            android:textColor="@color/unit_text_gray"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/unit_Fragment_Vertical_Line_Three"
            app:layout_constraintRight_toRightOf="@+id/unit_Fragment_Vertical_Line_Three"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />
        <ImageView
            android:id="@+id/unit_Fragment_UM_Item_Btn_Back"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:layout_marginLeft="246dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit_Fragment_UM_Btn_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="um"
            android:textColor="@color/unit_text_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Layout_Bg"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_UM_Item_Btn_Back"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_UM_Item_Btn_Back"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Layout_Bg" />
        <TextView
            android:id="@+id/unit_Fragment_UM_Select_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/unit_fragment_sel_label"
            android:textColor="@color/unit_text_gray"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/unit_Fragment_Vertical_Line_Four"
            app:layout_constraintRight_toRightOf="@+id/unit_Fragment_Vertical_Line_Four"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />
        <View
            android:id="@+id/unit_Fragment_Horizontal_Line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="19dp"
            android:background="@color/unit_text_gray"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Layout_Bg" />

        <View
            android:id="@+id/unit_Fragment_Vertical_Line_One"
            android:layout_width="1px"
            android:layout_height="8dp"
            android:layout_marginLeft="42dp"
            android:background="@color/unit_text_gray"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Horizontal_Line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Horizontal_Line" />

        <TextView
            android:id="@+id/unit_Fragment_Percent_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="%"
            android:textColor="@color/unit_text_gray"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_Vertical_Line_One"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_Vertical_Line_One"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />

        <View
            android:id="@+id/unit_Fragment_Vertical_Line_Two"
            android:layout_width="1px"
            android:layout_height="8dp"
            android:layout_marginLeft="124dp"
            android:background="@color/unit_text_gray"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Horizontal_Line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Horizontal_Line" />

        <TextView
            android:id="@+id/unit_Fragment_PPM_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ppm"
            android:textColor="@color/unit_text_gray"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_Vertical_Line_Two"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_Vertical_Line_Two"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />

        <View
            android:id="@+id/unit_Fragment_Vertical_Line_Three"
            android:layout_width="1px"
            android:layout_height="8dp"
            android:layout_marginLeft="206dp"
            android:background="@color/unit_text_gray"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Horizontal_Line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Horizontal_Line" />

        <TextView
            android:id="@+id/unit_Fragment_MGCM_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="mg/cm"
            android:textColor="@color/unit_text_gray"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_Vertical_Line_Three"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_Vertical_Line_Three"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />
        <View
            android:id="@+id/unit_Fragment_Vertical_Line_Four"
            android:layout_width="1px"
            android:layout_height="8dp"
            android:layout_marginLeft="288dp"
            android:background="@color/unit_text_gray"
            app:layout_constraintBottom_toBottomOf="@id/unit_Fragment_Horizontal_Line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/unit_Fragment_Horizontal_Line" />

        <TextView
            android:id="@+id/unit_Fragment_UM_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="um"
            android:textColor="@color/unit_text_gray"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/unit_Fragment_Vertical_Line_Four"
            app:layout_constraintRight_toRightOf="@id/unit_Fragment_Vertical_Line_Four"
            app:layout_constraintTop_toBottomOf="@id/unit_Fragment_Horizontal_Line" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>