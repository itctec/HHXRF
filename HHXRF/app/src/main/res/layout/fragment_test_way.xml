<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/test_Way_Fragment_Title"
        android:text="@string/test_way_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/test_Way_Fragment_Item_Switch_Layout_Btn"
        android:background="@drawable/round_rectangle_bg_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/test_Way_Fragment_Item_Btn_Back"
            android:layout_width="165dp"
            android:layout_height="120dp"
            android:background="@drawable/round_rectangle_bg_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/test_Way_Fragment_Metal_Btn_Icon"
            android:src="@drawable/test_way_metal_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="27dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/test_Way_Fragment_Metal_Btn_Title"
            android:text="@string/test_way_fragment_metal"
            android:textSize="20sp"
            android:textColor="@color/result_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/test_Way_Fragment_Metal_Btn_Icon"
            app:layout_constraintLeft_toLeftOf="@id/test_Way_Fragment_Metal_Btn_Icon"
            app:layout_constraintRight_toRightOf="@id/test_Way_Fragment_Metal_Btn_Icon"/>
        <TextView
            android:id="@+id/test_Way_Fragment_Metal_Btn_Selected_Tip"
            android:text="@string/test_way_fragment_item_select_tip"
            android:textSize="13sp"
            android:textColor="@color/result_text_gray"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/test_Way_Fragment_Metal_Btn_Title"
            app:layout_constraintLeft_toLeftOf="@id/test_Way_Fragment_Metal_Btn_Icon"
            app:layout_constraintRight_toRightOf="@id/test_Way_Fragment_Metal_Btn_Icon"/>

        <ImageView
            android:id="@+id/test_Way_Fragment_Ground_Btn_Icon"
            android:src="@drawable/test_way_ground_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="67dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/test_Way_Fragment_Ground_Btn_Title"
            android:text="@string/test_way_fragment_ground"
            android:textSize="20sp"
            android:textColor="@color/result_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/test_Way_Fragment_Ground_Btn_Icon"
            app:layout_constraintLeft_toLeftOf="@id/test_Way_Fragment_Ground_Btn_Icon"
            app:layout_constraintRight_toRightOf="@id/test_Way_Fragment_Ground_Btn_Icon"/>
        <TextView
            android:id="@+id/test_Way_Fragment_Ground_Btn_Selected_Tip"
            android:text="@string/test_way_fragment_item_select_tip"
            android:textSize="13sp"
            android:textColor="@color/result_text_gray"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/test_Way_Fragment_Ground_Btn_Title"
            app:layout_constraintLeft_toLeftOf="@id/test_Way_Fragment_Ground_Btn_Icon"
            app:layout_constraintRight_toRightOf="@id/test_Way_Fragment_Ground_Btn_Icon"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>