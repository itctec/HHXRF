<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/edit_Report_Fragment_Title"
        android:text="@string/edit_report_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_Report_Fragment_Template_One_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_orange"
        android:layout_marginTop="17dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_One_Title"
            android:text="@string/edit_report_fragment_template_one"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_One_Selected_Tip"
            android:text="@string/edit_report_fragment_template_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Template_One_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_Report_Fragment_Template_Two_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Template_One_Layout_Btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_Two_Title"
            android:text="@string/edit_report_fragment_template_two"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_Two_Selected_Tip"
            android:text="@string/edit_report_fragment_template_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Template_Two_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_Report_Fragment_Template_Three_Layout_Btn"
        android:layout_width="230dp"
        android:layout_height="73dp"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Template_Two_Layout_Btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_Three_Title"
            android:text="@string/edit_report_fragment_template_three"
            android:textSize="19sp"
            android:textColor="@color/edit_report_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/edit_Report_Fragment_Template_Three_Selected_Tip"
            android:text="@string/edit_report_fragment_template_selected_tip"
            android:textSize="12sp"
            android:textColor="@color/edit_report_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/edit_Report_Fragment_Template_Three_Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>