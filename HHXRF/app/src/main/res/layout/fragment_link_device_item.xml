<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDFDFD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/link_Fragment_Item_Bt_Icon"
        android:src="@drawable/vector_drawable_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/link_Fragment_Item_Bt_Name"
        android:text="蓝牙"
        android:textSize="7pt"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/link_Fragment_Item_Bt_Address"
        app:layout_constraintLeft_toRightOf="@id/link_Fragment_Item_Bt_Icon"/>
    <TextView
        android:id="@+id/link_Fragment_Item_Bt_Address"
        android:text="未连接"
        android:textSize="6pt"
        android:textColor="@color/result_text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/link_Fragment_Item_Bt_Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/link_Fragment_Item_Bt_Name"/>
    <View
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>