<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context=".settings_group_fragment.calibration_fragment.EnergyCalibrationActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/energy_Calibration_Top_Navigation"
        android:background="@color/activity_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/app_status_bar_height"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/energy_Calibration_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/energy_Calibration_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onBackBtnClick"
            android:src="@drawable/vector_drawable_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:text="@string/calibration_fragment_power_calibration"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:enabled="false"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toRightOf="@id/energy_Calibration_Top_Navigation_Back_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/energy_Calibration_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:alpha="0.1"
        android:paddingLeft="-90dp"
        android:src="@drawable/bg_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:alpha="0.1"
        android:paddingRight="-90dp"
        android:src="@drawable/bg_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/energy_calibration_start_tip"
        android:textColor="@color/home_text_white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/energy_Calibration_Top_Navigation_Bottom_Horizontal_Guideline" />

    <TextView
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="@string/energy_calibration_start_tip_detail"
        android:textColor="@color/home_text_white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/energy_Calibration_Top_Navigation_Bottom_Horizontal_Guideline" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="143dp"
        android:src="@drawable/bg_logo"
        android:onClick="onPull"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/energy_Calibration_Top_Navigation_Bottom_Horizontal_Guideline" />


</android.support.constraint.ConstraintLayout>