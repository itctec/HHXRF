<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/type_Calibration_Element_Sort_Label_Layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/type_Calibration_Element_Sort_Label"
            android:text="H"
            android:gravity="center"
            android:textColor="@color/element_show_text_white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/type_Calibration_Element_Content_Layout"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Element_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_element"
            android:textColor="@color/home_text_gray"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Multiplication_Value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/type_Calibration_Add_Sp_Two_Multiplication_Value"
            android:background="@drawable/round_rectangle_bg_dark"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/calibration_fragment_add_sp_two_multiplication"
            android:textColor="@color/home_text_white"
            android:textSize="15sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="2"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Element_Value"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Plus_Value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/type_Calibration_Add_Sp_Two_Plus_Value"
            android:background="@drawable/round_rectangle_bg_dark"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/calibration_fragment_add_sp_two_plus"
            android:textColor="@color/home_text_white"
            android:textSize="15sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="3"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Multiplication_Value"
            app:layout_constraintRight_toLeftOf="@+id/type_Calibration_Add_Sp_Two_Unit_Value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/type_Calibration_Add_Sp_Two_Unit_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/calibration_fragment_add_sp_two_unit"
            android:textColor="@color/home_text_gray"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_Two_Plus_Value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>