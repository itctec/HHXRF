<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_dialog_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_Title"
        android:textColor="#222222"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/dialog_Content"
        android:textColor="#555555"
        android:textSize="13dp"
        android:gravity="left|center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/dialog_Horizontal_Bg_Line"
        android:background="#AAAAAA"
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_Content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/dialog_Negative_Btn"
        android:text="@string/dialog_negative_btn_text"
        android:textColor="#888888"
        android:textSize="14dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_Horizontal_Bg_Line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dialog_Vertical_Bg_Line"/>
    <View
        android:id="@+id/dialog_Vertical_Bg_Line"
        android:background="#AAAAAA"
        android:layout_width="1px"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_Horizontal_Bg_Line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_Negative_Btn"
        app:layout_constraintRight_toLeftOf="@+id/dialog_Positive_Btn"/>
    <TextView
        android:id="@+id/dialog_Positive_Btn"
        android:textColor="#222288"
        android:textSize="14dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_Horizontal_Bg_Line"
        app:layout_constraintLeft_toRightOf="@+id/dialog_Vertical_Bg_Line"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
