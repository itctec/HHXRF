<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".settings_group_fragment.calibration_fragment.TypeCalibrationAddSpOne">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/type_Calibration_Add_Sp_One_Top_Navigation"
        android:background="@color/activity_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/app_status_bar_height"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/type_Calibration_Add_Sp_One_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/type_Calibration_Add_Sp_One_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onBackBtnClick"
            android:src="@drawable/vector_drawable_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:text="@string/calibration_fragment_add_input_name"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:enabled="false"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toRightOf="@id/type_Calibration_Add_Sp_One_Top_Navigation_Back_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/type_Calibration_Add_Sp_One_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />
    <EditText
        android:id="@+id/type_Calibration_Add_Sp_One_Name_Edit"
        android:textSize="19sp"
        android:textStyle="bold"
        android:hint="@string/calibration_fragment_add_input_name_please"
        android:gravity="center"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/type_Calibration_Add_Sp_One_Next_Step_Btn"
        android:text="@string/calibration_fragment_add_next_step"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_bg_green_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>