<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".settings_group_fragment.element_fragment.ElementAddActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/data_Compare_Top_Navigation"
        android:background="@color/activity_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/app_status_bar_height"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/data_Compare_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/data_Compare_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onBackBtnClick"
            android:src="@drawable/vector_drawable_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:hint="搜索元素或者元素序号"
            android:textColorHint="#999999"
            android:textSize="12sp"
            android:drawableLeft="@drawable/vector_drawable_search_icon"
            android:background="@drawable/round_rectangle_search_box_bg_light"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toRightOf="@id/data_Compare_Top_Navigation_Back_Btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/data_Compare_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/data_Compare_Sample_RV_Title_Layout"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/data_Compare_Top_Navigation_Bottom_Horizontal_Guideline">
        <TextView
            android:id="@+id/data_Compare_Sample_Name"
            android:text="@string/history_fragment_column_name"
            android:textSize="17sp"
            android:textColor="@color/home_text_black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/data_Compare_Datetime_Label"/>
        <TextView
            android:id="@+id/data_Compare_Datetime_Label"
            android:text="@string/history_fragment_column_datetime"
            android:textSize="17sp"
            android:textColor="@color/home_text_black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/data_Compare_Sample_Name"
            app:layout_constraintRight_toLeftOf="@+id/data_Compare_Test_Way_Label"/>
        <TextView
            android:id="@+id/data_Compare_Test_Way_Label"
            android:text="@string/history_fragment_column_way"
            android:textSize="17sp"
            android:textColor="@color/home_text_black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/data_Compare_Datetime_Label"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/data_Compare_Item_Divider_Line_One"
            android:background="#DDDDDD"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/data_Compare_Sample_Name"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/data_Compare_History_RV"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/data_Compare_Sample_RV_Title_Layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/data_Compare_Btn"
        android:text="@string/compare_data_activity_data_compare"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_rectangle_bg_green_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.8"
        android:enabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>