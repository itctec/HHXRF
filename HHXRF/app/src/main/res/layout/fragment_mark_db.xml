<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/mark_db_Fragment_Title"
        android:text="@string/mark_db_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/mark_db_Fragment_Menu_Btn"
        android:src="@drawable/vector_drawable_point_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/mark_db_Fragment_Cancel_Edit_Btn"
        android:text="@string/cancel_edit_btn_text"
        android:textSize="15sp"
        android:textColor="@color/element_show_text_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mark_db_Fragment_Menu_Layout"
        android:background="@drawable/round_rectangle_bg_light"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Menu_Btn"
        app:layout_constraintRight_toLeftOf="@id/mark_db_Fragment_Menu_Btn">
        <TextView
            android:id="@+id/mark_db_Fragment_Import_Data_Menu_Btn"
            android:text="@string/mark_db_fragment_import_mark_db"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mark_db_Fragment_Edit_Data_Menu_Btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/mark_db_Fragment_Edit_Data_Menu_Btn"
            android:text="@string/mark_db_fragment_edit_mark_db"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Import_Data_Menu_Btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mark_db_Fragment_Mark_Lib_RV"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Title"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mark_db_Fragment_Float_Menu_Outer_Layout"
        android:background="#99aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Title"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/mark_db_Fragment_Float_Menu_Inner_Layout"
            android:background="@drawable/round_rectangle_bg_light"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/mark_db_Fragment_Float_Menu_Item_Copy"
                android:text="@string/mark_db_fragment_float_menu_copy"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/vector_drawable_copy_icon"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mark_db_Fragment_Float_Menu_Item_Del"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/mark_db_Fragment_Float_Menu_Item_Del"
                android:text="@string/mark_db_fragment_float_menu_del"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/vector_drawable_del_icon"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Float_Menu_Item_Copy"
                app:layout_constraintBottom_toTopOf="@+id/mark_db_Fragment_Float_Menu_Item_Transport"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/mark_db_Fragment_Float_Menu_Item_Transport"
                android:text="@string/mark_db_fragment_float_menu_transport"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableRight="@drawable/vector_drawable_transport_icon"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toBottomOf="@id/mark_db_Fragment_Float_Menu_Item_Del"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>