<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#FFFFFF">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/home_Fragment_Last_Report_Top_Navigation"
        android:background="@color/activity_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/app_status_bar_height"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/last_Report_Fragment_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onLastReportBackBtnClick"
            android:src="@drawable/vector_drawable_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/last_Report_Fragment_Top_Navigation_Sample_Name"
            android:text="@string/home_last_report_top_navigation_label"
            android:textColor="@color/home_text_white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:lines="1"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="15"
            android:enabled="true"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Top_Navigation_Back_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/last_Report_Fragment_Top_Navigation_Open_Camera_Btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="18dp"
            android:onClick="onLeftDrawerShowBtnClick"
            android:src="@drawable/open_camera_icon_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/last_Report_Fragment_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />

    <TextView
        android:id="@+id/last_Report_Fragment_Calibration_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:text="CA1"
        android:textColor="@color/home_text_black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Top_Navigation_Bottom_Horizontal_Guideline" />

    <TextView
        android:id="@+id/last_Report_Fragment_Grade_Name"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="SS316"
        android:textColor="@color/home_text_black"
        android:textSize="39sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Top_Navigation_Bottom_Horizontal_Guideline" />

    <TextView
        android:id="@+id/last_Report_Fragment_Test_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:text="@string/test_way_fragment_metal"
        android:textColor="@color/home_text_black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Calibration_Name" />

    <TextView
        android:id="@+id/last_Report_Fragment_Conformity_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="97%符合度"
        android:textColor="@color/home_text_gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Calibration_Name" />

    <ImageView
        android:id="@+id/last_Report_Fragment_Report_Show_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginRight="19dp"
        android:src="@drawable/report_show_type_grid_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Top_Navigation_Bottom_Horizontal_Guideline" />
    <View
        android:id="@+id/last_Report_Fragment_Item_Divider_Line_Zero"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Test_Type"/>
    <TextView
        android:id="@+id/last_Report_Fragment_Element_Name"
        android:text="@string/home_last_report_column_element"
        android:textSize="17sp"
        android:textColor="@color/home_text_black"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Test_Type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/last_Report_Fragment_Element_Operation_One_Label"/>
    <TextView
        android:id="@+id/last_Report_Fragment_Element_Operation_One_Label"
        android:text="@string/home_last_report_column_percent_symble"
        android:textSize="17sp"
        android:textColor="@color/home_text_black"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Test_Type"
        app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Element_Name"
        app:layout_constraintRight_toLeftOf="@+id/last_Report_Fragment_Element_Operation_Two_Label"/>
    <TextView
        android:id="@+id/last_Report_Fragment_Element_Operation_Two_Label"
        android:text="@string/home_last_report_column_range"
        android:textSize="17sp"
        android:textColor="@color/home_text_black"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Test_Type"
        app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Element_Operation_One_Label"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/last_Report_Fragment_Report_Change_Column_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/vector_drawable_triangle_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/last_Report_Fragment_Element_Name"
        app:layout_constraintBottom_toBottomOf="@id/last_Report_Fragment_Element_Name"/>
    <View
        android:id="@+id/last_Report_Fragment_Item_Divider_Line_One"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Element_Name"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/last_Report_Fragment_Report_Data_RV"
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Item_Divider_Line_One"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Report_Data_Show_More_Btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/last_Report_Fragment_Report_Data_Show_More_Btn"
        android:textSize="6pt"
        android:text="@string/home_last_report_show_more"
        android:drawableLeft="@drawable/expand_more"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Item_Divider_Line_Two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/last_Report_Fragment_Item_Divider_Line_Two"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Print_Report_Layout"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/last_Report_Fragment_Print_Report_Layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Item_Divider_Line_Three">
        <ImageView
            android:id="@+id/last_Report_Fragment_Print_Report_Icon"
            android:src="@drawable/report_print"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/last_Report_Fragment_Print_Report_Label"
            android:text="@string/home_last_report_print_report"
            android:textSize="14sp"
            android:textColor="@color/home_text_black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toTopOf="@id/last_Report_Fragment_Print_Report_Icon"
            app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Print_Report_Icon"/>
        <TextView
            android:id="@+id/last_Report_Fragment_Print_Report_Bluetooth_State_Label"
            android:text="@string/home_last_report_print_report_details"
            android:textSize="10sp"
            android:textColor="@color/home_text_gray"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Print_Report_Label"
            app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Print_Report_Icon"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/last_Report_Fragment_Item_Divider_Line_Three"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toTopOf="@+id/last_Report_Fragment_Send_Report_Layout"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/last_Report_Fragment_Send_Report_Layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/last_Report_Fragment_Send_Report_Icon"
            android:src="@drawable/report_share"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/last_Report_Fragment_Send_Report_Label"
            android:text="@string/home_last_report_share_report"
            android:textSize="14sp"
            android:textColor="@color/home_text_black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toTopOf="@id/last_Report_Fragment_Send_Report_Icon"
            app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Send_Report_Icon"/>
        <TextView
            android:id="@+id/last_Report_Fragment_Send_Report_WLAN_State_Label"
            android:text="@string/home_last_report_share_report_details"
            android:textSize="10sp"
            android:textColor="@color/home_text_gray"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toBottomOf="@id/last_Report_Fragment_Send_Report_Label"
            app:layout_constraintLeft_toRightOf="@id/last_Report_Fragment_Send_Report_Icon"/>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>