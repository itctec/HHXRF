<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/safe_Fragment_Title"
        android:text="@string/safe_fragment_title"
        android:textSize="18sp"
        android:textColor="@color/result_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/safe_Fragment_Title_Sub_Tip"
        android:text="@string/safe_fragment_input_current_password_tip"
        android:textSize="14sp"
        android:textColor="@color/home_text_gray"
        android:drawableLeft="@drawable/vector_drawable_password_lock_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/safe_Fragment_Title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/safe_Fragment_Password_Input_Edit_Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/safe_Fragment_Title_Sub_Tip">

        <EditText
            android:id="@+id/safe_Fragment_Password_Input_Edit_One"
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:background="@drawable/password_edit_back_gray"
            android:gravity="center"
            android:textColor="@color/home_text_gray"
            android:textSize="20sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:nextFocusForward="@+id/safe_Fragment_Password_Input_Edit_Two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/safe_Fragment_Password_Input_Edit_Two"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/safe_Fragment_Password_Input_Edit_Two"
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:background="@drawable/password_edit_back_gray"
            android:gravity="center"
            android:textColor="@color/home_text_gray"
            android:textSize="20sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:nextFocusForward="@+id/safe_Fragment_Password_Input_Edit_Three"
            app:layout_constraintLeft_toRightOf="@id/safe_Fragment_Password_Input_Edit_One"
            app:layout_constraintRight_toLeftOf="@+id/safe_Fragment_Password_Input_Edit_Three"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/safe_Fragment_Password_Input_Edit_Three"
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:background="@drawable/password_edit_back_gray"
            android:gravity="center"
            android:textColor="@color/home_text_gray"
            android:textSize="20sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:nextFocusForward="@+id/safe_Fragment_Password_Input_Edit_Four"
            app:layout_constraintLeft_toRightOf="@id/safe_Fragment_Password_Input_Edit_Two"
            app:layout_constraintRight_toLeftOf="@+id/safe_Fragment_Password_Input_Edit_Four"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/safe_Fragment_Password_Input_Edit_Four"
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:background="@drawable/password_edit_back_gray"
            android:gravity="center"
            android:textColor="@color/home_text_gray"
            android:textSize="20sp"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionDone"
            app:layout_constraintLeft_toRightOf="@id/safe_Fragment_Password_Input_Edit_Three"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>